---
import Layout from '../layouts/Layout.astro';
import { ProductNavigation } from '../components/ProductNavigation';
import { ProductSections } from '../components/ProductSections';
import BreadcrumbSchema from '../components/BreadcrumbSchema.astro';

const breadcrumbItems = [
  { name: "Home", url: "https://haymarketbicycles.com/" },
  { name: "Products", url: "https://haymarketbicycles.com/products" }
];

// Product schema for the spotlight products
const productSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@type": "Product",
        "name": "Trek Domane SLR 7,
        "image": "https://images.unsplash.com/photo-1532298229144-0ec0c57515c7?auto=format&fit=crop&q=80",
        "description": "Lightweight carbon frame with Shimano Ultegra components. Perfect for climbing and long-distance rides.",
        "brand": {
          "@type": "Brand",
          "name": "Trek"
        },
        "offers": {
          "@type": "Offer",
          "price": "8499.99",
          "priceCurrency": "USD",
          "availability": "https://schema.org/InStock",
          "seller": {
            "@type": "BikeShop",
            "name": "Haymarket Bicycles"
          }
        }
      }
    },
    {
      "@type": "ListItem",
      "position": 2,
      "item": {
        "@type": "Product",
        "name": "Trek Supercaliber SL",
        "image": "https://images.unsplash.com/photo-1576435728678-68d0fbf94e91?auto=format&fit=crop&q=80",
        "description": "Trail-ready full suspension with modern geometry. Handles everything from flow trails to technical descents.",
        "brand": {
          "@type": "Brand",
          "name": "Trek"
        },
        "offers": {
          "@type": "Offer",
          "price": "4199.99",
          "priceCurrency": "USD",
          "availability": "https://schema.org/InStock",
          "seller": {
            "@type": "BikeShop",
            "name": "Haymarket Bicycles"
          }
        }
      }
    },
    {
      "@type": "ListItem",
      "position": 3,
      "item": {
        "@type": "Product",
        "name": "Orbea Terra OMR",
        "image": "https://images.unsplash.com/photo-1571068316344-75bc76f77890?auto=format&fit=crop&q=80",
        "description": "Versatile gravel bike with premium build. The perfect balance of climbing efficiency and descending capability.",
        "brand": {
          "@type": "Brand",
          "name": "Orbea"
        },
        "offers": {
          "@type": "Offer",
          "price": "3499.99",
          "priceCurrency": "USD",
          "availability": "https://schema.org/InStock",
          "seller": {
            "@type": "BikeShop",
            "name": "Haymarket Bicycles"
          }
        }
      }
    }
  ]
};

// Custom OG image for products page
const ogImage = "https://images.unsplash.com/photo-1532298229144-0ec0c57515c7?auto=format&fit=crop&q=80&w=1200&h=630";
---

<Layout 
  title="Premium Bikes & Gear in Haymarket | Best Bikes in Northern Virginia" 
  description="Shop premium bicycles and gear in Haymarket and Gainesville, VA. Authorized dealer for Trek, Cannondale, and other top brands. Find road, mountain, and gravel bikes for Northern Virginia riders."
  ogImage={ogImage}
  ogImageOpacity={0.7}
>
  <main class="min-h-screen">
    <div class="bg-background py-16 md:py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
          <h1 class="text-4xl font-bold tracking-tight">
            Quality Bikes & Gear in Haymarket
          </h1>
          <p class="mt-6 text-xl text-muted-foreground max-w-2xl">
            Authorized dealer of the world's finest bicycle brands for Northern Virginia cyclists
          </p>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 mobile-padding">
      <ProductNavigation client:load />
      <ProductSections client:load />
    </div>
  </main>
  <BreadcrumbSchema items={breadcrumbItems} />
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} />
</Layout>